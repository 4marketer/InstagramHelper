{
	"manifest_version":2,

	"name":"Instagram Helper",
	"description":"Merge followers and following users; Export followers into CSV file",
	"version":"0.1",
	
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"page_action": {
		"default_icon":"img/icon.png",
		"default_title":"Insta Followers",
		"default_popup":"popup.html"
	},

	"background":{
		"scripts":["eventPage.js", "lib/jquery-3.1.1.min.js"],
		"persistent":false
	},

	"content_scripts":[
		{
			"matches":["https://www.instagram.com/*"],
			"js":["instafollowers.js"]
		}
	],

	"permissions":[
		"tabs",
		"https://www.instagram.com/*"
	]

}