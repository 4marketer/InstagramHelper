{
	"manifest_version": 2,

	"name": "Instagram Helper (Scraper)",
	"short_name": "InstaHelper",
	"description": "Allows to create the list of instagram users, and export them into CSV file, also includes other helpfers for instagram.com",
	"version": "0.250",

	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",

	"page_action": {
		"default_icon": "img/icon19.png",
		"default_title": "Instagram Helper (Scraper)",
		"default_popup": "popup.html"
	},

	"icons": {
		"19": "img/icon19.png",
		"32": "img/icon32.png",
		"48": "img/icon48.png",
		"64": "img/icon64.png"
	},

	"background": {
		"scripts": ["PromiseChrome.js", "background.js"],
		"persistent": true
	},

	"content_scripts": [{
			"matches": ["https://www.instagram.com/*"],
			"js": ["instaDefOptions.js", "PromiseChrome.js", "instagramHelper.js"]
		}
	],

	"permissions": [
		"tabs",
		"storage",
		"cookies",
		"webRequest",
		"webRequestBlocking",
		"https://www.instagram.com/*"
	],
	
	"incognito": "split"
}
